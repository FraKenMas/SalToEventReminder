{
    "name": "SalTo Event Reminder",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": ["activeTab", "scripting"],

    "icons": {
      "16": "icon16.png",
      "32": "icon32.png",
      "128": "icon128.png"
    },

    "action": {
    },

    "background": {
        "service_worker": "background.js"
      },

    "content_scripts": [
        {
          "matches": ["https://www.salonelibro.it/programma?item=*"],
          "js": ["content.js"],
          "web_accessible_resources": [
            "content.js",
            "https://use.fontawesome.com/releases/v5.15.3/css/all.css"
          ]
        }
      ]
      
  }
  